bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# resize window (you can also use the mouse for that)
mode "resize"
{
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.{{{
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.}}}
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys{{{
        #bindsym Left resize shrink width 10 px or 10 ppt
        #bindsym Down resize grow height 10 px or 10 ppt
        #bindsym Up resize shrink height 10 px or 10 ppt
        #bindsym Right resize grow width 10 px or 10 ppt}}}

        # back to normal: Enter or Escape
        #bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#ignoreall mode for complete i3 hotkey bypass
mode "&#xf023;"
{
    bindsym $mod+f fullscreen disable
    bindsym $mod+p exec "sudo systemctl suspend"
}
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar
{
    #enable font-awesome for cooler workspace numbering
    font pango: FontAwesome 10

    #set output at RH side of bar
    #force my config
    status_command i3status -c ~/.config/i3/status/config
    #separator_symbol "|" - irrelevant when not using #staus_command i3status - JSON thing in /etc/i3 #suppress tray app icons
    tray_output none
    tray_padding 0

    #hide bar unless urgent or $mod pressed
    mode hide
    hidden_state hide
    modifier $mod

    #bar at bottom (default)
    position bottom

    #display workspace buttons LH
    workspace_buttons yes
    #display name of current mode, if not default
    binding_mode_indicator yes

    #if workspaces named "#:name", '#:' will be removed
    strip_workspace_numbers no

    #colors - same HTML style as above
    #colors     DEFAULTS
    #{
    #    background #000000
    #    statusline #ffffff
    #    separator #666666
    #
    #    focused_background
    #    focused_statusline
    #    focused_separator
    #    focused_workspace  #4c7899 #285577 #ffffff
    #    active_workspace   #333333 #5f676a #ffffff
    #    inactive_workspace #333333 #222222 #888888
    #    urgent_workspace   #2f343a #900000 #ffffff
