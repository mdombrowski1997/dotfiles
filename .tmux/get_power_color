#! /bin/bash

bat=$(cat /sys/class/power_supply/BAT0/capacity)

if [ $bat -ge 80 ]; then
    echo -n "#[fg=#00FF00,bold]"
elif [ $bat -ge 60 ]; then
    echo -n "#[fg=#80FF00,bold]"
elif [ $bat -ge 40 ]; then
    echo -n "#[fg=#FFFF00,bold]"
elif [ $bat -ge 20 ]; then
    echo -n "#[fg=#FF8000,bold]"
else
    echo -n "#[fg=#FF0000,bold]"
fi

