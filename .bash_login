#~/.bash_login - executed by bash when login shell starts

#because apparently this file gets sourced alone now
if [ -f "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
fi

#votd (more like VotLogin)
if [ $TERM == 'linux' ]; then
    #get that good clean font
    setfont sun12x22
    echo -ne '\n'
    ~/code/garden/mem/mem
fi

#print todo list
if [ -s ~/.todo ]; then
    echo "ToDo:"
    cat ~/.todo
    echo -ne "\n"
fi

if [ $TERM == 'linux' ]; then
    if [ -w /dev/bus/usb/001/003 ]; then
        true
    else
        #make fprint reader useable
        sudo chmod 666 /dev/bus/usb/001/003
    fi
fi

#please, please, please stop the beeping
#if ! [ -n $(lsmod|grep 'pcspkr'|cut -f1 -d' ') ]; then
if ! [ -n $(grep /proc/modules -e 'pcspkr') ]; then
    sudo rmmod pcspkr
fi
